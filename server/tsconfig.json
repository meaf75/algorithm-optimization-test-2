{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "typeRoots": [
            "@types", 
            "node_modules/@types"
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"]
}